<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.fragmentNav.RateFragment">


    <LinearLayout
        android:layout_marginTop="20dp"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="Từ Ngày"
            android:id="@+id/btnTungay"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edtungay"
            android:hint="DD/MM/YYYY"
            android:textSize="18dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:editable="false"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="Đến Ngày"
            android:id="@+id/btndenngay"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/eddenngay"
            android:hint="DD/MM/YYYY"
            android:textSize="18dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:editable="false"/>

    </LinearLayout>
    <Button
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Doanh Thu"
        android:id="@+id/btndoanhthu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="20dp"
        android:text="Doanh Thu Phòng"
        android:textSize="20dp"
        android:id="@+id/tvDoanhthuPhong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="20dp"
        android:text="Doanh Thu Cá Nhân"
        android:textSize="20dp"
        android:id="@+id/tvDoanhthuCaNhan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>